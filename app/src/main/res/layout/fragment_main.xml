<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.search.SearchMainFragment">

    <EditText
        android:id="@+id/main_searchbar"
        android:layout_width="377dp"
        android:layout_height="42dp"
        android:focusable="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar"
        android:hint="오늘 냉장고 요리는 뭐 해먹지?"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/searchBtn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/search"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/main_searchbar"
        app:layout_constraintTop_toTopOf="@+id/main_searchbar"
        app:layout_constraintBottom_toBottomOf="@+id/main_searchbar"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/main_searchbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recommend_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>