<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.search.SearchMainFragment">

    <EditText
        android:id="@+id/main_searchbar"
        android:layout_width="377dp"
        android:layout_height="42dp"
        android:focusable="false"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar"
        android:hint="오늘 냉장고 요리는 뭐 해먹지?"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/searchBtn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/search"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/main_searchbar"
        app:layout_constraintTop_toTopOf="@+id/main_searchbar"
        app:layout_constraintBottom_toBottomOf="@+id/main_searchbar"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/main_searchbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">
            <TextView
                android:id="@+id/main_recommend_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:bufferType="spannable"
                android:textColor="@color/grey_900"
                android:text="#여름에 먹으면 더욱 맛좋은 레시피"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_acha_stand"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recommend_recyclerview1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/main_searchbar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="bottom">
            <TextView
                android:id="@+id/main_recommend_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:bufferType="spannable"
                android:textColor="@color/grey_900"
                android:text="#여름에 먹으면 더욱 맛좋은 레시피"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_acha_walk"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recommend_recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/main_searchbar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/main_recommend_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:bufferType="spannable"
                    android:textColor="@color/grey_900"
                    android:text="#여름에 먹으면 더욱 맛좋은 레시피"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_acha_stand"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_recommend_recyclerview3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:clipToPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/main_searchbar"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>