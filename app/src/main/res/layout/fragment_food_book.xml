<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.foodbook.FoodBookFragment">
    <LinearLayout
        android:id="@+id/findwindow_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/findwindow"
                    android:layout_width="322dp"
                    android:layout_height="42dp"
                    android:background="@drawable/searchbar"
                    android:hint="오늘 냉장고 요리는 뭐 해먹지?"
                    android:textSize="12sp"
                    android:paddingLeft="15dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:imeOptions="actionSearch"
                    android:privateImeOptions="defaultInputmode=korean"
                    android:text="" />
    
                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/search"
                    android:layout_gravity="right|center_vertical"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </FrameLayout>
            <Button
                android:id="@+id/search_cancle_btn"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:text="취소"
                android:textColor="@color/grey_500"
                android:background="#00FFFFFF"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/chip_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근검색어"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="335dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="@+id/chip_group_title"
                app:layout_constraintTop_toBottomOf="@+id/chip_group_title"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/chip_group_delAll_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@id/chip_group_title"
                android:text="전체삭제"
                android:textSize="12sp"
                style="@style/Widget.AppCompat.Button.Borderless"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                android:background="#00FFFFFF"
                android:textColor="@color/grey_900"
                android:elevation="0dp"/>
            <View
                android:id="@+id/divisionLine"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/grey_200"
                app:layout_constraintTop_toBottomOf="@id/chip_group" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/FindrecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="60dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divisionLine" />
            <LinearLayout
                android:id="@+id/foodbook_notfound_layout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/foodbook_notfound_text"
                    android:layout_width="377dp"
                    android:layout_height="wrap_content"
                    android:text="파스타 레시피를 찾을 수가 없습니다."
                    android:textSize="16sp"
                    android:textColor="@color/grey_1000"
                    android:bufferType="spannable"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="15dp"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="150dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_notfound"/>
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_omg"
                        android:paddingRight="15dp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

<!--
    
    -->
</androidx.constraintlayout.widget.ConstraintLayout>