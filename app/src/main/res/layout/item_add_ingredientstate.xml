<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/state_picking_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/foodimage"
                android:elevation="4dp">
                <ImageView
                    android:id="@+id/state_picking_icon"
                    android:layout_width="91dp"
                    android:layout_height="91dp"
                    android:layout_margin="4px"
                    android:scaleType="centerInside"
                    android:background="@drawable/foodimage"
                    android:clipToOutline="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:id="@+id/state_picking_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:textSize="19sp"
                android:text="양파"/>
            <TextView
                android:id="@+id/state_picking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_600"
                android:textSize="11sp"
                android:text="등록날짜 2022.07.07"/>
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/state_ing_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/state_picking_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/state_ing_r1"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:button="@null"
            android:textAlignment="center"
            android:text="생"
            android:textSize="20sp"
            android:textColor="@drawable/selector_radio_text"
            android:background="@drawable/selector_radio_button"/>

        <RadioButton
            android:id="@+id/state_ing_r2"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_radio_button"
            android:button="@null"
            android:layout_marginLeft="13dp"
            android:text="썰은"
            android:textAlignment="center"
            android:textColor="@drawable/selector_radio_text"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/state_ing_r3"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:button="@null"
            android:layout_marginLeft="13dp"
            android:textAlignment="center"
            android:text="다진"
            android:textSize="20sp"
            android:textColor="@drawable/selector_radio_text"
            android:background="@drawable/selector_radio_button"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/state_sto_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/state_ing_rg"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/state_sto_r1"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:button="@null"
            android:textAlignment="center"
            android:text="실온"
            android:textSize="20sp"
            android:textColor="@drawable/selector_radio_text"
            android:background="@drawable/selector_radio_button"/>
        <RadioButton
            android:id="@+id/state_sto_r2"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:button="@null"
            android:layout_marginLeft="13dp"
            android:textAlignment="center"
            android:text="냉장"
            android:textSize="20sp"
            android:textColor="@drawable/selector_radio_text"
            android:background="@drawable/selector_radio_button"/>
        <RadioButton
            android:id="@+id/state_sto_r3"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:button="@null"
            android:layout_marginLeft="13dp"
            android:textAlignment="center"
            android:text="냉동"
            android:textSize="20sp"
            android:textColor="@drawable/selector_radio_text"
            android:background="@drawable/selector_radio_button"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>