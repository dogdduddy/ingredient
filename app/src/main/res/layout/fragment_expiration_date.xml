<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.expirationDate.ExpirationDate">

    <TextView
        android:id="@+id/expiration_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="유통기한" />
    <Button
        android:id="@+id/expity_sortBtn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="정렬"
        app:layout_constraintTop_toBottomOf="@+id/expiration_date_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnTest"
        android:text="재료추가"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/expiration_date_text"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/removeExpiryIngredient_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnTest"
        app:layout_constraintStart_toStartOf="parent"
        android:text="삭제"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expirationRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.94"
        app:layout_constraintTop_toBottomOf="@+id/removeExpiryIngredient_btn"/>




</androidx.constraintlayout.widget.ConstraintLayout>
