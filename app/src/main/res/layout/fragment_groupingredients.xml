<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.basket.group.GroupIngredientsFragment">

    <TextView
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Test!!"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/groupText" />
    <EditText
        android:id="@+id/groupEditText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        android:hint="그룹 이름"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupRecyclerView"/>
    <Button
        android:id="@+id/AddComBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/groupEditText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/groupAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그룹 추가"
        app:layout_constraintTop_toBottomOf="@+id/groupEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>