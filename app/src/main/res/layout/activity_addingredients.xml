<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.expirationDate.add_ingredient.AddIngredientsActivity"
    android:background="@color/white">

    <EditText
        android:id="@+id/ing_searchbar"
        android:layout_width="377dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar"
        android:hint="오늘 냉장고 요리는 뭐 해먹지?"
        android:textSize="12sp"
        android:paddingLeft="15dp"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:privateImeOptions="defaultInputmode=korean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ing_search_btn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/search"
        app:layout_constraintTop_toTopOf="@+id/ing_searchbar"
        app:layout_constraintBottom_toBottomOf="@+id/ing_searchbar"
        app:layout_constraintEnd_toEndOf="@+id/ing_searchbar"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/chip_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="검색재료"
        app:layout_constraintTop_toBottomOf="@id/ing_searchbar"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/ing_searchbar"/>

    <HorizontalScrollView
        android:id="@+id/chip_group_scroll"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@+id/chip_group_title"
        app:layout_constraintTop_toBottomOf="@id/chip_group_title">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/pickingredientChip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Entry" />
    </HorizontalScrollView>

    <Button
        android:id="@+id/pickingredientsave"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/chip_group_title"
        android:text="전체저장"
        android:textSize="12sp"
        android:textAlignment="textEnd"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toEndOf="@+id/ing_searchbar"
        android:background="#00FFFFFF"
        android:textColor="@color/grey_900"
        android:elevation="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chip_group_scroll"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/foodimage"
            android:orientation="horizontal">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/orange_300"
                android:layout_weight="1"
                app:tabMode="scrollable">
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="육류"/>
            </com.google.android.material.tabs.TabLayout>
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_add_ingredient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>