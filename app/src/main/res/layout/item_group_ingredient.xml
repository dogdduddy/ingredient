<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/com_facebook_blue">
    <TextView
        android:id="@+id/group_ingredientgroupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="새우볶음밥"/>
    <Button
        android:id="@+id/group_drawBtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/group_ingredientgroupname"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/group_ingredienticon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/group_ingredientgroupname"
        app:layout_constraintStart_toStartOf="@+id/group_ingredientgroupname"/>

    <TextView
        android:id="@+id/group_ingredientname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@+id/group_ingredienticon"
        app:layout_constraintStart_toEndOf="@+id/group_ingredienticon"
        android:text="새우"/>
    <TextView
        android:id="@+id/group_ingredientamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@id/group_ingredienticon"
        app:layout_constraintStart_toEndOf="@+id/group_ingredientname"
        android:text="1"/>


</androidx.constraintlayout.widget.ConstraintLayout>