<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/expiry_ing_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/foodimage"
            android:elevation="4dp">
            <ImageView
                android:id="@+id/group_inner_ing_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="4px"
                android:scaleType="centerInside"
                android:background="@drawable/foodimage"
                android:clipToOutline="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/group_inner_ing_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_600"
            android:textSize="11sp"
            android:text="채소"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/group_inner_ing_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="19sp"
            android:text="파프리카"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:gravity="right">
        <Button
            android:id="@+id/group_inner_ing_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/group_ingredient_minus"
            android:background="#00FFFFFF"
            android:textSize="22sp"
            android:textColor="@color/grey_700"
            android:text="+"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/group_inner_ing_cnttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/grey_600"
                android:text="수량"/>
            <TextView
                android:id="@+id/group_inner_ing_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange_400"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="1마리"/>
        </LinearLayout>
        <Button
            android:id="@+id/group_inner_ing_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/grey_700"
            android:background="#00FFFFFF"
            android:textSize="22sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="-"/>
    </LinearLayout>

</LinearLayout>