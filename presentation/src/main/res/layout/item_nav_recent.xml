<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_recent_image_cardview"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp">
        <ImageView
            android:id="@+id/nav_recent_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/nav_recent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nav_recent_image_cardview"
        app:layout_constraintStart_toStartOf="@+id/nav_recent_image_cardview"
        app:layout_constraintEnd_toEndOf="@+id/nav_recent_image_cardview"
        android:layout_marginTop="5dp"
        android:text="두부 스테이크"
        android:textSize="13sp"
        android:layout_gravity="left"/>

</androidx.constraintlayout.widget.ConstraintLayout>