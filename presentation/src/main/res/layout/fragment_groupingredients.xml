<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.basket.group.GroupIngredientsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_inner_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/group_inner_btn_origin"
        android:visibility="visible"
        android:layout_width="364dp"
        android:layout_height="52dp"
        android:background="@drawable/selector_grey_shape"
        android:drawableLeft="@drawable/ic_plus"
        android:elevation="4dp"
        android:scaleType="matrix"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/grey_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="재료 및 그룹 추가"/>

    <ImageButton
        android:id="@+id/group_inner_btn_other"
        android:visibility="gone"
        android:layout_width="71.5dp"
        android:layout_height="71.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_plus"
        android:padding="26dp"
        android:scaleType="fitXY"
        android:background="@drawable/selector_grey_shape"
        android:elevation="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>