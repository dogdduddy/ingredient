<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.foodbook.FoodBookFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/foodbook_main_searchbar"
        android:layout_width="377dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/searchbar"
        android:paddingLeft="15dp"
        android:hint="원하는 레시피를 찾아보세요."
        android:textSize="12sp"
        android:focusable="false"
        android:inputType="text"
        android:imeOptions="actionSearch"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/search"
        app:layout_constraintTop_toTopOf="@+id/foodbook_main_searchbar"
        app:layout_constraintBottom_toBottomOf="@+id/foodbook_main_searchbar"
        app:layout_constraintEnd_toEndOf="@+id/foodbook_main_searchbar"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/foodbook_main_tablayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/orange_300"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/foodbook_main_searchbar"
        app:layout_constraintTop_toBottomOf="@+id/foodbook_main_searchbar"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FindrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/foodbook_main_tablayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>